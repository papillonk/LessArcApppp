                   VerticalOptions="Fill"
                   IsEnabled="False" />

            <!-- ðŸ’» MASAÃœSTÃœ -->
            <Grid x:Name="DesktopLayoutView"
                  IsVisible="False"
                  Padding="{Binding P_Page}">
                <ScrollView>
                    <VerticalStackLayout
                        Spacing="{Binding S_L}"
                        Padding="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                        <Frame Style="{StaticResource SectionHeaderFrame}"
                               CornerRadius="{Binding C_Radius}"
                               Padding="{Binding P_CardPad}">
                            <Label Text="RAPORLAMA SEÃ‡Ä°NÄ°Z"
