<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="__page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:LessArcApppp.Controls"
    x:Class="LessArcApppp.AdminRaporlarPage"
    Title=""
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Fume">#2B302E</Color>
            <Color x:Key="Bej">#D6C9C1</Color>
            <Color x:Key="KirikBeyaz">#F3F1EE</Color>
            <Color x:Key="Beyaz">#FFFFFF</Color>

            <Style x:Key="SectionHeaderFrame" TargetType="Frame">
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource Bej}" />
                <Setter Property="BorderColor" Value="{StaticResource Bej}" />
                <Setter Property="Padding" Value="16,12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>

            <Style x:Key="SectionHeaderLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Fume}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="LineBreakMode" Value="NoWrap" />
                <Setter Property="CharacterSpacing" Value="0.5" />
            </Style>

            <Style x:Key="FumePrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#66000000" />
                <Setter Property="TextColor" Value="{StaticResource Beyaz}" />
                <Setter Property="BorderColor" Value="{StaticResource Bej}" />
                <Setter Property="BorderWidth" Value="3" />
                <Setter Property="CornerRadius" Value="14" />
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="Shadow" Value="Medium" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- ÃœST BAR + GÃ–VDE dÃ¼zeni -->
    <Grid RowDefinitions="Auto,*">

