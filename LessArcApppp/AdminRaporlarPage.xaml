                                Padding="{Binding P_ItemPad}" />

                            <Button
                                Text="ðŸ“… Zaman BazlÄ± Raporlama"
                                Clicked="BtnZamanRapor_Clicked"
                                Style="{StaticResource FumePrimaryButton}"
                                FontSize="{Binding F_Body}"
                                HeightRequest="{Binding H_Button}"
                                CornerRadius="{Binding C_SmallRadius}"
                                Padding="{Binding P_ItemPad}" />
                        </VerticalStackLayout>

                        <Grid HeightRequest="{Binding S_L}" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

            <!-- ðŸ“± MOBÄ°L -->
            <ScrollView x:Name="MobileLayoutView" IsVisible="False">
                <!-- ScrollView iÃ§inde dikey ortalama iÃ§in 3 satÄ±rlÄ± grid -->
                <Grid RowDefinitions="*,Auto,*"
                      Padding="{Binding P_Page}">
                    <VerticalStackLayout Grid.Row="1"
                                         Spacing="{Binding S_M}"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">

                        <!-- BaÅŸlÄ±k ortada -->
                        <Frame Style="{StaticResource SectionHeaderFrame}"
                               CornerRadius="{Binding C_Radius}"
                               Padding="{Binding P_CardPad}"
                               HorizontalOptions="Center">
                            <Label Text="RAPORLAMA SEÃ‡Ä°NÄ°Z"
                                   Style="{StaticResource SectionHeaderLabel}"
                                   FontSize="{Binding F_Title}" />
                        </Frame>

                        <!-- Butonlar ortada -->
                        <VerticalStackLayout Spacing="{Binding S_M}"
                                             HorizontalOptions="Center"
                                             WidthRequest="320">
                            <Button Text="ðŸ‘· Ã‡alÄ±ÅŸan BazlÄ± Raporlama"
                                    Clicked="BtnCalisanRapor_Clicked"
                                    Style="{StaticResource FumePrimaryButton}"
                                    FontSize="{Binding F_Body}"
                                    HeightRequest="{Binding H_Button}"
                                    CornerRadius="{Binding C_SmallRadius}"
                                    Padding="{Binding P_ItemPad}"
