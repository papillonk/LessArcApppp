                                    CornerRadius="{Binding C_SmallRadius}"
                                    Padding="{Binding P_ItemPad}"
                                    HorizontalOptions="Center" />
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Grid>
            </ScrollView>

        </Grid>
    </Grid>
</ContentPage>
