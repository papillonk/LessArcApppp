<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="__page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:LessArcApppp.Controls"
    x:Class="LessArcApppp.AyarlarPage"
    Title=""
    BackgroundColor="Transparent"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <!-- ÃœST BAR + GÃ–VDE -->
    <Grid RowDefinitions="Auto,*">

        <!-- ðŸ”¹ ÃœST: Custom Title Bar (geri ok aÃ§Ä±k) -->
        <controls:CustomTitleBar
            Grid.Row="0"
            ShowBack="True" />

        <!-- ðŸ”¹ ALT: Mevcut gÃ¶vde -->
        <Grid Grid.Row="1">

            <!-- Arka plan -->
            <Image Source="arkaplann.png"
                   Aspect="AspectFill"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   IsEnabled="False" />

            <ScrollView>
                <VerticalStackLayout
                    Padding="{Binding PagePadding}"
                    Spacing="{Binding PageSpacing}"
                    HorizontalOptions="Center">

                    <VerticalStackLayout x:Name="FormContainer"
                                         Spacing="{Binding FormSpacing}"
                                         BackgroundColor="Transparent"
                                         WidthRequest="{Binding FormWidth}">

                        <!-- BaÅŸlÄ±k -->
                        <HorizontalStackLayout Spacing="{Binding SmallSpacing}"
                                               HorizontalOptions="Center">
                            <Image Source="ayar.png"
                                   WidthRequest="{Binding IconSize}"
                                   HeightRequest="{Binding IconSize}" />
                            <Label Text="AYARLAR"
                                   FontSize="{Binding TitleFontSize}"
                                   FontAttributes="Bold"
                                   TextColor="#ECECEC" />
                        </HorizontalStackLayout>

                        <Label Text="BÄ°LGÄ°LERÄ° GÃœNCELLE"
                               FontSize="{Binding SectionTitleFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC"
                               HorizontalOptions="Center" />

                        <!-- Ad -->
                        <Label Text="Ad:"
                               FontSize="{Binding LabelFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC" />
                        <Entry x:Name="entryAd"
                               Placeholder="Yeni ad"
                               BackgroundColor="#F5F5F5"
                               TextColor="#000000"
                               FontSize="{Binding EntryFontSize}"
                               HeightRequest="{Binding EntryHeight}"
                               Margin="{Binding EntryMargin}" />

                        <!-- Soyad -->
                        <Label Text="Soyad:"
                               FontSize="{Binding LabelFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC" />
                        <Entry x:Name="entrySoyad"
                               Placeholder="Yeni soyad"
                               BackgroundColor="#F5F5F5"
                               TextColor="#000000"
                               FontSize="{Binding EntryFontSize}"
                               HeightRequest="{Binding EntryHeight}"
                               Margin="{Binding EntryMargin}" />

                        <!-- KullanÄ±cÄ± AdÄ± -->
                        <Label Text="KullanÄ±cÄ± AdÄ±:"
                               FontSize="{Binding LabelFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC" />
                        <Entry x:Name="entryKullaniciAdi"
                               Placeholder="Yeni kullanÄ±cÄ± adÄ±"
                               BackgroundColor="#F5F5F5"
                               TextColor="#000000"
                               FontSize="{Binding EntryFontSize}"
                               HeightRequest="{Binding EntryHeight}"
                               Margin="{Binding EntryMargin}" />

                        <!-- Åžifre -->
                        <Label Text="Åžifre:"
                               FontSize="{Binding LabelFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC" />
                        <Entry x:Name="entrySifre"
                               Placeholder="Yeni ÅŸifre"
                               IsPassword="True"
                               BackgroundColor="#F5F5F5"
                               TextColor="#000000"
                               FontSize="{Binding EntryFontSize}"
                               HeightRequest="{Binding EntryHeight}"
                               Margin="{Binding EntryMargin}" />

                        <!-- E-posta -->
                        <Label Text="E-posta:"
                               FontSize="{Binding LabelFontSize}"
                               FontAttributes="Bold"
                               TextColor="#ECECEC" />
                        <Entry x:Name="entryEposta"
                               Placeholder="Yeni e-posta"
                               BackgroundColor="#F5F5F5"
                               TextColor="#000000"
                               FontSize="{Binding EntryFontSize}"
                               HeightRequest="{Binding EntryHeight}"
                               Margin="{Binding EntryMargin}" />

                        <!-- Butonlar -->
                        <Button Text="GÃ¼ncelle"
                                Clicked="BtnGuncelle_Clicked"
                                BackgroundColor="#4CAF50"
                                TextColor="#FFFFFF"
                                CornerRadius="{Binding ButtonCorner}"
                                HorizontalOptions="Center"
                                WidthRequest="{Binding ButtonWidth}"
                                HeightRequest="{Binding ButtonHeight}"
                                FontSize="{Binding ButtonFontSize}"
                                Padding="{Binding ButtonPadding}" />

                        <Button Text="Ã‡IKIÅž YAP"
                                Clicked="BtnCikisYap_Clicked"
                                BackgroundColor="#757575"
                                TextColor="#FFFFFF"
                                CornerRadius="{Binding ButtonCorner}"
                                HorizontalOptions="Center"
                                WidthRequest="{Binding ButtonWidth}"
                                HeightRequest="{Binding ButtonHeight}"
                                FontSize="{Binding ButtonFontSize}"
                                Padding="{Binding ButtonPadding}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
