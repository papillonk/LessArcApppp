<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:LessArcApppp.Converters"
    xmlns:controls="clr-namespace:LessArcApppp.Controls"
    x:Class="LessArcApppp.AdminProjelerPage"
    x:Name="__page"
    BackgroundColor="Transparent"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <!-- ====================== SAYFA KAYNAKLARI ====================== -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TamamlandiGorunurConverter x:Key="TamamlandiGorunurConverter" />
            <Style TargetType="Label" ApplyToDerivedTypes="True">
                <Setter Property="TextColor" Value="Black" />
            </Style>

            <!-- iOS yorum template -->
            <DataTemplate x:Key="IosYorumTemplate">
                <!-- ... (değişmedi) ... -->
            </DataTemplate>

            <!-- Android/WinUI yorum template -->
            <DataTemplate x:Key="OtherYorumTemplate">
                <!-- ... (değişmedi) ... -->
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- ====================== SAYFA DÜZENİ ====================== -->
    <Grid RowDefinitions="Auto,*">
        <!-- Arkaplan -->
        <Image Grid.RowSpan="2" Source="arkaplann.png" Aspect="AspectFill" InputTransparent="True" />

        <!-- Üst Başlık -->
        <controls:CustomTitleBar Grid.Row="0" ShowBack="True" />

        <!-- GÖVDE -->
        <Grid Grid.Row="1">
            <!-- ====== MOBİL ====== -->
            <Grid x:Name="MobilGrid"
                  IsVisible="False"
                  RowSpacing="10"
                  Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="📁 Projelerim"
                       FontAttributes="Bold"
                       FontSize="22"
                       TextColor="#ebe9e5"
                       HorizontalOptions="Center"
                       Margin="12,12,12,10" />

                <StackLayout Grid.Row="1"
                             x:Name="mobileLayout"
                             IsVisible="True"
                             Padding="0"
                             Spacing="{Binding S_M}"
                             BackgroundColor="Transparent"
                             Margin="12,0,12,10">
                    <Label Text="Bir proje seçin"
                           FontAttributes="Bold"
                           FontSize="{Binding F_Body}"
                           TextColor="#D6C9C1" />
                    <Frame BackgroundColor="White"
                           CornerRadius="{Binding C_SmallRadius}"
                           Padding="{Binding P_FieldPad}"
                           HasShadow="True">
                        <Picker x:Name="pickerProjeler"
                                Title="Projeler"
                                ItemDisplayBinding="{Binding Baslik}"
                                TextColor="#2d2e32"
                                FontSize="{Binding F_Body}"
                                BackgroundColor="Transparent"
                                SelectedIndexChanged="pickerProjeler_SelectedIndexChanged"/>
                    </Frame>
                </StackLayout>

                <ScrollView Grid.Row="2" Margin="12,0,12,12">
                    <VerticalStackLayout Spacing="16">
                        <Frame BackgroundColor="#ebe9e5"
                               CornerRadius="16"
                               HasShadow="True"
                               Padding="14">
                            <VerticalStackLayout x:Name="MobilProjeDetaylariPanel"
                                                 Spacing="14">
                                <!-- Başlık + check -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label x:Name="lblSeciliProjeBaslikMobile"
                                           Grid.Column="0"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="#2d2e32"/>
                                    <Image x:Name="imgCheckMobile"
                                           Grid.Column="1"
                                           Source="checkmark.png"
                                           WidthRequest="20"
                                           HeightRequest="20"
                                           IsVisible="False"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- >>> DEĞİŞEN KISIM: Tarihler sağda dar, etiketler solda; Durum aynı hizada <<< -->
                                <Grid ColumnDefinitions="Auto,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnSpacing="12"
                                      RowSpacing="12">

                                    <!-- Başlangıç -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="Başlangıç :"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="Center"/>
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="#FFFFFF"
                                           CornerRadius="10"
                                           Padding="{Binding ScaledSmallPadding}"
                                           HasShadow="True"
                                           BorderColor="#E5E5E5"
                                           WidthRequest="220"
                                           HorizontalOptions="End">
                                        <Grid>
                                            <Label VerticalOptions="Center"
                                                   TextColor="#222"
                                                   FontSize="{Binding ScaledFontSize3}"
                                                   Text="{Binding Source={x:Reference dpBaslangicMobile}, Path=Date, StringFormat='{0:dd.MM.yyyy}'}"/>
                                            <DatePicker x:Name="dpBaslangicMobile"
                                                        Opacity="0.02"
                                                        BackgroundColor="Transparent"
                                                        DateSelected="DpBaslangicMobile_DateSelected"/>
                                        </Grid>
                                    </Frame>

                                    <!-- Bitiş -->
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="Bitiş :"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="Center"/>
                                    <Frame Grid.Row="1" Grid.Column="1"
                                           BackgroundColor="#FFFFFF"
                                           CornerRadius="10"
                                           Padding="{Binding ScaledSmallPadding}"
                                           HasShadow="True"
                                           BorderColor="#E5E5E5"
                                           WidthRequest="220"
                                           HorizontalOptions="End">
                                        <Grid>
                                            <Label VerticalOptions="Center"
                                                   TextColor="#222"
                                                   FontSize="{Binding ScaledFontSize3}"
                                                   Text="{Binding Source={x:Reference dpBitisMobile}, Path=Date, StringFormat='{0:dd.MM.yyyy}'}"/>
                                            <DatePicker x:Name="dpBitisMobile"
                                                        Opacity="0.02"
                                                        BackgroundColor="Transparent"
                                                        DateSelected="DpBitisMobile_DateSelected"/>
                                        </Grid>
                                    </Frame>

                                    <!-- Durum (aynı hiza ve genişlik) -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="Durum :"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="Center"/>
                                    <Frame Grid.Row="2" Grid.Column="1"
                                           BackgroundColor="#dfd5c9"
                                           CornerRadius="18"
                                           HasShadow="False"
                                           Padding="10,8"
                                           HeightRequest="52"
                                           WidthRequest="220"
                                           HorizontalOptions="End">
                                        <Picker x:Name="pickerDurumMobile"
                                                Title="Durum Seçin"
                                                BackgroundColor="Transparent"/>
                                    </Frame>

                                    <!-- Güncelle butonu: değişmedi -->
                                    <Button Grid.Row="3" Grid.ColumnSpan="2"
                                            x:Name="btnBilgileriGuncelleMobile"
                                            Text="Bilgileri Güncelle"
                                            BackgroundColor="#dfd5c9"
                                            TextColor="#3a3a3a"
                                            CornerRadius="18"/>
                                </Grid>

                                <Label x:Name="lblGenelTamamMobile"
                                       FontSize="13"
                                       TextColor="#2d2e32"/>
                                <VerticalStackLayout x:Name="MobilAdimlarPanel"
                                                     Spacing="10"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Yorumlar (Mobil) -->
                        <Frame BackgroundColor="#d8d0ca"
                               CornerRadius="18"
                               HasShadow="False"
                               Padding="14">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Projeye Yorumlar"
                                       FontSize="16"
                                       FontAttributes="Bold"/>

                                <!-- runtime’da InjectMobilYorumView() buraya uygun şablonu koyar -->
                                <ContentView x:Name="MobilYorumHost" />

                                <Grid ColumnDefinitions="*,Auto"
                                      ColumnSpacing="8"
                                      Margin="0,6,0,0">
                                    <Frame Grid.Column="0"
                                           BackgroundColor="White"
                                           CornerRadius="12"
                                           HasShadow="False"
                                           Padding="8">
                                        <Editor x:Name="MobilYorumEditor"
                                                Placeholder="Yorum yaz..."
                                                HeightRequest="44"/>
                                    </Frame>
                                    <Button Grid.Column="1"
                                            x:Name="BtnYorumGonderMobile"
                                            Text="Gönder"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            CornerRadius="12"
                                            WidthRequest="120"
                                            HeightRequest="44"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

            <!-- ====== MASAÜSTÜ ====== -->
            <Grid x:Name="MasaustuGrid" IsVisible="True"
                  RowSpacing="{Binding ScaledSpacing}"
                  ColumnSpacing="{Binding ScaledSmallSpacing}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.8*" />
                    <ColumnDefinition Width="3.2*" />
                </Grid.ColumnDefinitions>

                <Label Text="📁 Tüm Projeler"
                       FontSize="{Binding ScaledFontSize2}"
                       FontAttributes="Bold"
                       TextColor="#D6C9C1"
                       Margin="{Binding ScaledSmallPadding}"
                       Grid.Row="0" Grid.ColumnSpan="2"/>

                <Frame Grid.Row="1" Grid.Column="0"
                       Margin="{Binding ScaledSmallPadding}"
                       Padding="{Binding ScaledSmallPadding}"
                       BackgroundColor="#ebe9e5" BorderColor="#D0D5DD"
                       CornerRadius="16" HasShadow="True">
                    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center" ColumnSpacing="{Binding ScaledSmallSpacing}">
                        <Entry x:Name="entryAraDesktop"
                               Placeholder="Aramak istediğiniz proje ismi"
                               PlaceholderColor="#7A7A7A"
                               BackgroundColor="Transparent"
                               TextColor="Black"
                               FontSize="{Binding ScaledFontSize3}"
                               TextChanged="entryAraDesktop_TextChanged"/>
                        <Image Grid.Column="1" Source="search.png"
                               WidthRequest="{Binding ScaledButtonIcon}"
                               HeightRequest="{Binding ScaledButtonIcon}"
                               VerticalOptions="Center" Margin="{Binding M_ItemBetween}"/>
                    </Grid>
                </Frame>

                <CollectionView x:Name="ProjelerListesi"
                                Grid.Row="2" Grid.Column="0"
                                SelectionMode="None"
                                Margin="{Binding ScaledSmallPadding}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="{Binding Source={x:Reference __page}, Path=BindingContext.M_ItemBetween}"
                                   Padding="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledPadding}"
                                   CornerRadius="16"
                                   BackgroundColor="#ebe9e5" BorderColor="#D0D5DD" HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto"
                                      ColumnSpacing="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallSpacing}"
                                      RowSpacing="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallSpacing}">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Baslik}"
                                           FontSize="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledFontSize3}" />
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding KullaniciAdSoyad}"
                                           FontSize="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledFontSize4}" />
                                    <Image Grid.RowSpan="2" Grid.Column="1" Source="checkmark.png"
                                           WidthRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                           HeightRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                           Margin="{Binding Source={x:Reference __page}, Path=BindingContext.M_ItemBetween}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding Durum, Converter={StaticResource TamamlandiGorunurConverter}}"/>
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ProjeKart_Tapped"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Frame Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                       BackgroundColor="#ebe9e5"
                       CornerRadius="16"
                       BorderColor="#D0D5DD"
                       HasShadow="True"
                       Padding="0"
                       Margin="{Binding ScaledSmallPadding}">
                    <ScrollView Padding="{Binding ScaledSmallPadding}">
                        <VerticalStackLayout Spacing="{Binding ScaledSpacing}">
                            <Frame BackgroundColor="#f1ede9" CornerRadius="16" HasShadow="False" Padding="{Binding ScaledSmallPadding}">
                                <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto"
                                      ColumnSpacing="{Binding ScaledSpacing}" RowSpacing="{Binding ScaledSmallSpacing}">

                                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="{Binding ScaledSmallSpacing}">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="{Binding ScaledSmallSpacing}">
                                            <Label x:Name="lblSeciliProjeBaslik" Grid.Column="0" Text=""
                                                   FontAttributes="Bold" FontSize="{Binding ScaledFontSize2}" TextColor="#2d2e32" />
                                            <Image x:Name="imgCheckDesktop" Grid.Column="1" Source="checkmark.png"
                                                   WidthRequest="{Binding ScaledButtonIcon}" HeightRequest="{Binding ScaledButtonIcon}"
                                                   Margin="{Binding M_ItemBetween}" VerticalOptions="Center" IsVisible="False"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto"
                                              ColumnSpacing="{Binding ScaledSmallSpacing}" RowSpacing="{Binding ScaledSmallSpacing}">
                                            <Label Grid.Row="0" Grid.Column="0" Text="Başlangıç:" FontAttributes="Bold"
                                                   VerticalTextAlignment="Center" FontSize="{Binding ScaledFontSize4}"/>
                                            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#dfd5c9" CornerRadius="18"
                                                   HasShadow="False" Padding="{Binding ScaledSmallPadding}" HeightRequest="52"
                                                   HorizontalOptions="Start" WidthRequest="220">
                                                <Grid>
                                                    <Label VerticalOptions="Center" TextColor="#3a3a3a" FontSize="{Binding ScaledFontSize3}"
                                                           Text="{Binding Source={x:Reference dpBaslangicDesktop}, Path=Date, StringFormat='{0:dd.MM.yyyy}'}"/>
                                                    <DatePicker x:Name="dpBaslangicDesktop" Opacity="0" BackgroundColor="Transparent" VerticalOptions="FillAndExpand" />
                                                </Grid>
                                            </Frame>

                                            <Label Grid.Row="1" Grid.Column="0" Text="Bitiş:" FontAttributes="Bold"
                                                   VerticalTextAlignment="Center" FontSize="{Binding ScaledFontSize4}"/>
                                            <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#dfd5c9" CornerRadius="18"
                                                   HasShadow="False" Padding="{Binding ScaledSmallPadding}" HeightRequest="52"
                                                   HorizontalOptions="Start" WidthRequest="220">
                                                <Grid>
                                                    <Label VerticalOptions="Center" TextColor="#3a3a3a" FontSize="{Binding ScaledFontSize3}"
                                                           Text="{Binding Source={x:Reference dpBitisDesktop}, Path=Date, StringFormat='{0:dd.MM.yyyy}'}"/>
                                                    <DatePicker x:Name="dpBitisDesktop" Opacity="0" BackgroundColor="Transparent" VerticalOptions="FillAndExpand" />
                                                </Grid>
                                            </Frame>
                                        </Grid>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="{Binding ScaledSmallSpacing}"
                                                         HorizontalOptions="Start" WidthRequest="360">
                                        <Label Text="Durum :" FontAttributes="Bold" HorizontalOptions="Start" FontSize="{Binding ScaledFontSize4}"/>
                                        <Frame BackgroundColor="#dfd5c9" CornerRadius="18" HasShadow="False"
                                               Padding="{Binding ScaledSmallPadding}" HeightRequest="98"
                                               HorizontalOptions="Start" WidthRequest="220">
                                            <Picker x:Name="pickerDurumDesktop" Title="Durum Seçin"
                                                    BackgroundColor="Transparent" HeightRequest="90" TextColor="#3a3a3a" FontSize="{Binding ScaledFontSize3}"/>
                                        </Frame>
                                        <Button x:Name="btnBilgileriGuncelleDesktop" Text="Bilgileri Güncelle"
                                                BackgroundColor="#dfd5c9" TextColor="#3a3a3a" CornerRadius="18"
                                                HeightRequest="{Binding ScaledButtonHeight}" HorizontalOptions="Fill"
                                                FontSize="{Binding ScaledFontSize3}"/>
                                    </VerticalStackLayout>

                                    <Label Grid.Row="2" Grid.ColumnSpan="2" x:Name="lblGenelTamamDesktop"
                                           Text="" FontSize="{Binding ScaledFontSize4}" TextColor="#2d2e32"/>
                                </Grid>
                            </Frame>

                            <VerticalStackLayout x:Name="ProjeDetaylariPanel" Spacing="{Binding ScaledSpacing}" />

                            <!-- Yorumlar (Desktop) -->
                            <Frame BackgroundColor="#d8d0ca" CornerRadius="18" HasShadow="False" Padding="{Binding ScaledSmallPadding}">
                                <VerticalStackLayout Spacing="{Binding ScaledSmallSpacing}">
                                    <Label Text="Projeye Yorumlar" FontSize="{Binding ScaledFontSize3}" FontAttributes="Bold" TextColor="Grey"/>

                                    <CollectionView x:Name="DesktopYorumCollection"
                                                    ItemsSource="{Binding DesktopYorumlar}"
                                                    HeightRequest="350"
                                                    ItemSizingStrategy="MeasureAllItems">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Vertical"
                                                               ItemSpacing="{Binding ScaledSmallSpacing}"/>
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame CornerRadius="14" BackgroundColor="#f6f4f3" HasShadow="False"
                                                       Padding="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallPadding}"
                                                       Margin="{Binding Source={x:Reference __page}, Path=BindingContext.M_ItemBetween}"
                                                       MaximumHeightRequest="150">
                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto"
                                                          ColumnSpacing="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallSpacing}">
                                                        <Grid Grid.Column="0" Grid.Row="0" ColumnDefinitions="*,Auto"
                                                              ColumnSpacing="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallSpacing}">
                                                            <Label Grid.Column="0" Text="{Binding KullaniciAdSoyad}"
                                                                   FontAttributes="Bold"
                                                                   FontSize="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledFontSize4}"/>
                                                            <Label Grid.Column="1" Text="{Binding OlusturmaTarihi, StringFormat='{}{0:dd.MM.yyyy HH\\:mm}'}"
                                                                   FontSize="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledFontSize4}"
                                                                   TextColor="#666" VerticalTextAlignment="Center" />
                                                        </Grid>

                                                        <Label Grid.Column="0" Grid.Row="1" Text="{Binding YorumMetni}"
                                                               FontSize="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledFontSize4}"
                                                               Margin="0,4,12,0"
                                                               LineBreakMode="WordWrap"
                                                               MaxLines="4"/>

                                                        <HorizontalStackLayout Grid.Column="1" Grid.RowSpan="2"
                                                                               Spacing="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledSmallSpacing}"
                                                                               HorizontalOptions="End" VerticalOptions="Center">
                                                            <ImageButton Source="pencil.png"
                                                                         BackgroundColor="Transparent" Padding="0"
                                                                         WidthRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                                                         HeightRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                                                         CommandParameter="{Binding .}"
                                                                         IsVisible="{Binding IsEditable}"
                                                                         Clicked="EditYorum_Clicked"/>
                                                            <ImageButton Source="sil.png"
                                                                         BackgroundColor="Transparent" Padding="0"
                                                                         WidthRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                                                         HeightRequest="{Binding Source={x:Reference __page}, Path=BindingContext.ScaledButtonIcon}"
                                                                         CommandParameter="{Binding .}"
                                                                         IsVisible="{Binding IsDeletable}"
                                                                         Clicked="SilYorum_Clicked"/>
                                                        </HorizontalStackLayout>
                                                    </Grid>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="{Binding ScaledSmallSpacing}"
                                          Margin="0,6,0,0" HorizontalOptions="FillAndExpand">
                                        <Frame Grid.Column="0" BackgroundColor="White" CornerRadius="14" HasShadow="False"
                                               Padding="{Binding ScaledSmallPadding}" HorizontalOptions="FillAndExpand"
                                               MinimumHeightRequest="50">
                                            <Editor x:Name="DesktopYorumEditor"
                                                    Placeholder="Yorumunuzu Yazınız..."
                                                    PlaceholderColor="Grey"
                                                    AutoSize="Disabled"
                                                    HeightRequest="44"
                                                    BackgroundColor="Transparent"/>
                                        </Frame>
                                        <Button Grid.Column="1" Text="Gönder" x:Name="BtnYorumGonderDesktop"
                                                Clicked="BtnYorumGonderDesktop_Clicked"
                                                BackgroundColor="#4CAF50" TextColor="White" CornerRadius="12"
                                                WidthRequest="120" HeightRequest="{Binding ScaledButtonHeight}"
                                                HorizontalOptions="Fill" VerticalOptions="Center"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
