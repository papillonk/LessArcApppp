	</ItemGroup>

	<ItemGroup>
		<Folder Include="Controls\" />
	</ItemGroup>

	<!-- Entitlements dosyasını projeye ekle -->
	<ItemGroup>
		<None Update="Platforms\iOS\Entitlements.plist">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
