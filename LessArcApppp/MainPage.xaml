                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="BtnSifreUnuttum_ToggleMobile" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label x:Name="lblHataMobile"
                                   TextColor="Red"
                                   IsVisible="False"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   Margin="0,4,0,0" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Karartma -->
                <BoxView x:Name="arkaplanMobile"
