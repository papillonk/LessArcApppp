                                   HorizontalOptions="Center"
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- ðŸ”² Arka Karartma -->
                <BoxView x:Name="arkaplan"
                         BackgroundColor="Black"
